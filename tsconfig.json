{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "jsx":"preserve",
    "jsxImportSource": "solid-js",
    "inlineSourceMap": false,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/renderer.tsx",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
