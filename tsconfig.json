{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "jsx":"preserve",
    "jsxImportSource": "solid-js",
    "inlineSourceMap": false,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2022",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/renderer.tsx"
  ],
  "exclude": [
    "src/__tests__",
    "src/__mocks__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts"
  ]
}
